<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelloNeon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_rgb2gray"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="灰度-neon指令测试" />

        <Button
            android:id="@+id/button_rgb2yuv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="RGB2YUV-neon指令测试" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_hello_neon"
            android:text="Hello World!"
            app:layout_constraintLeft_toLeftOf="@+id/activity_hello_neon"
            app:layout_constraintTop_toTopOf="@+id/activity_hello_neon"
            app:layout_constraintRight_toRightOf="@+id/activity_hello_neon"
            app:layout_constraintBottom_toBottomOf="@+id/activity_hello_neon" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
